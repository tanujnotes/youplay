<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/collapsing_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:srcCompat="@drawable/music_placeholder" />

    <View
        android:id="@+id/collapsing_image_gradient_top"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <View
        android:id="@+id/collapsing_image_gradient_bottom"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_top_grayscale_gradient"
        android:visibility="gone" />

</RelativeLayout>